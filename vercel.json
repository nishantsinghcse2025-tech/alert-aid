{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/health.py"
    },
    {
      "src": "/api/weather.*",
      "dest": "/api/weather.py"
    },
    {
      "src": "/api/predict.*",
      "dest": "/api/predict.py"
    },
    {
      "src": "/api/alerts.*",
      "dest": "/api/alerts.py"
    },
    {
      "src": "/api/earthquakes.*",
      "dest": "/api/earthquakes.py"
    },
    {
      "src": "/api/?$",
      "dest": "/api/index.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}