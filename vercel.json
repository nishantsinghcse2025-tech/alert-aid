{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/index.py"
    },
    {
      "src": "/api/weather/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/api/predict/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/api/alerts/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/api/earthquakes",
      "dest": "/api/index.py"
    },
    {
      "src": "/api/external-data",
      "dest": "/api/index.py"
    },
    {
      "src": "/api",
      "dest": "/api/index.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}